NAME        := a.out

CC          := cc
CFLAGS      := -Wall -Wextra -Werror
DEPFLAGS     = -MMD -MP

LDFLAGS     :=
LDLIBS      :=

VPATH       := ./ src/
SRCS        := main.c
OBJS        := $(SRCS:%.c=%.o)
DEPS        := $(SRCS:%.c=%.d)

# **************************************************************************** #
#   RULES                                                                      #
# **************************************************************************** #

.PHONY: all clean fclean re

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJS) -o $@ $(LDLIBS)

%.o: %.c %.d
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DEPFLAGS) -c $< -o $@

all: $(NAME)

clean:
	$(RM) $(OBJS) $(DEPS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

include $(wildcard $(DEPS))
